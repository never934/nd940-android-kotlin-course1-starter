<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
    </style>

    <style name="Custom.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/primaryDarkColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edit_field_hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="default_button">
        <item name="android:layout_marginStart">@dimen/left_indent</item>
        <item name="android:layout_marginEnd">@dimen/right_indent</item>
        <item name="android:padding">@dimen/interior_indent</item>
    </style>

    <style name="light_button" parent="default_button">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="title_text_view_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="body_text_view_style">
        <item name="android:layout_marginStart">@dimen/left_indent</item>
        <item name="android:layout_marginTop">@dimen/top_half_indent</item>
        <item name="android:layout_marginEnd">@dimen/right_indent</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="text_view_in_item">
        <item name="android:layout_marginStart">@dimen/left_indent</item>
        <item name="android:layout_marginTop">@dimen/top_half_indent</item>
        <item name="android:layout_marginEnd">@dimen/right_indent</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>


</resources>
